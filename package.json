{
  "name": "myradio",
  "version": "1.0.0",
  "description": "A radio desktop software",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amadratitus/myRadio"
  },
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge make --dev"
  },
  "keywords": [
    "radio",
    "internet"
  ],
  "author": "christopher amadra titus",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "^28.2.1"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "bootstrap": "^5.3.2",
    "check-internet-connected": "^2.0.6",
    "dotenv": "^16.4.1",
    "electron-online": "^1.0.0",
    "electron-updater": "^6.1.7",
    "update-electron-app": "^3.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "My Radio",
        "executableName": "My Radio",
        "icon": "./res/images/icon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "myRadio"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
